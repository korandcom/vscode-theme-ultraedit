{
	"$schema": "vscode://schemas/color-theme",
	"name": "Ultraedit Light",
	"colors": {
		
		// Editor
		
		"editor.background": "#FFFFFF",
		"editor.foreground": "#000000",
		"editor.lineHighlightBackground": "#FFFFD0EE",
		"editorLineNumber.foreground": "#999999",
		
		// Selection
		
		"editor.selectionBackground" : "#BFDFFF",
		"editor.selectionHighlightBackground": "#BFDFFF40",
		"editor.inactiveSelectionBackground": "#BFDFFF90",
		
		// Find
		
		"editor.findMatchBackground" : "#BFDFFF90",
		"editor.findMatchHighlightBackground" : "#BFDFFF00",
		"editor.findRangeHighlightBackground" : "#BFDFFF40",
		"editor.findMatchHighlightBorder" : "#00000080",
		
		// Title bar
		
		"titleBar.activeBackground": "#444444",
		"titleBar.activeForeground": "#dddddd",
		
		// Activity bar
		
		"activityBar.background" : "#252525",
		
		// Side bar
		
		"sideBar.background" : "#f0f0f0",
		
		// Status bar
		
		"statusBar.background" : "#555555",
		"statusBar.foreground" : "#dddddd",
		
		// Tabs
		
		"editorGroupHeader.tabsBackground" : "#cccccc",
		"tab.border" : "#bbbbbb",
		"tab.activeBackground" : "#ffffff",
		"tab.activeForeground" : "#707070",
		"tab.inactiveBackground" : "#e0e0e0",
		"tab.inactiveForeground" : "#707070",
		"tab.activeBorder" : "#ffffff",

		// List

		"list.activeSelectionBackground" : "#4B83CD",
		"list.activeSelectionForeground" : "#eee",
		"list.focusHighlightForeground" : "#fff",
		"list.activeSelectionIconForeground" : "#fff"
	
	},
	"tokenColors": [
		
		// Comments
		
		{
			"scope": "comment",
			"settings": {
				"foreground": "#008080"
			}
		},
		
		// Strings
		
		{
			"scope": "string",
			"settings": {
				"foreground": "#686868"
			}
		},
		
		// Numbers
		
		{
			"scope": [
				"constant.numeric"
			],
			"settings": {
				"foreground": "#ff0000"
			}
		},
		
		// Builtin functions
		
		{
			"scope": [
				"support.function"
			],
			"settings": {
				"foreground": "#804040"
			}
		},
		
		// Variables
		
		{
			"scope": [
				"variable",
				"meta.definition.variable entity.name.function"
			],
			"settings": {
				"foreground": "#FF8000"
			}
		},
		
		// Classes
		
		{
			"scope": [
				"entity.name.type.class"
			],
			"settings": {
				"fontStyle" : "bold"
			}
		},
		
		// Functions
		
		{
			"scope": [
				"meta.function entity.name.function",
				"meta.function support.function"
			],
			"settings": {
				"fontStyle" : "bold"
			}
		},
		
		{
			"scope": [
				"meta.function-call entity.name.function",
				"meta.function-call support.function"
			],
			"settings": {
				"fontStyle" : ""
			}
		},
		
		// Global variables, constants, storage type and etc
		
		{
			"scope": [
				"variable.other.global",
				"constant",
				"support.constant",
				"storage",
				"keyword"
			],
			"settings": {
				"foreground": "#0000ff"
			}
		},
		
		// Regexp
		
		{
			"scope": "constant.regexp",
			"settings": {
				"foreground": "#4B83CD"
			}
		},
		
		// Operators, storage modifiers
		
		{
			"scope": [
				"keyword.operator",
				"storage.modifier"
			],
			"settings": {
				"foreground": "#008000"
			}
		},
		
		// PHP
		
		{
			"scope": [
				"punctuation.section.embedded.begin.php",
				"punctuation.section.embedded.end.php"
			],
			"settings": {
				"foreground": "#A16A94"
			}
		},
		
		{
			"scope": [
				"support.function.construct.php"
			],
			"settings": {
				"fontStyle" : ""
			}
		},
		
		// HTML/XML
		
		{
			"scope": [
				"punctuation.definition.tag",
				"punctuation.definition.tag.begin",
				"punctuation.definition.tag.end",
				"entity.name.tag",
				"entity.name.tag.block.any",
				"entity.name.tag.inline.any"
			],
			"settings": {
				"foreground": "#0000FF"
			}
		},
		
		{
			"scope": [
				"entity.other.attribute-name"
			],
			"settings": {
				"foreground": "#FF0000"
			}
		},
		
		// CSS
		
		{
			"scope": [
				"entity.name.tag.css",
				"entity.other.attribute-name.class.css",
				"entity.other.attribute-name.id.css"
			],
			"settings": {
				"foreground": "#0000FF"
			}
		},
		
		{
			"scope": [
				"meta.property-value.css keyword.other.unit",
				"meta.at-rule.media.header.css keyword.other.unit"
			],
			"settings": {
				"foreground": "#FF0000"
			}
		},
		
		{
			"scope": [
				"meta.property-value.css support.constant",
				"meta.property-value.css constant"
			],
			"settings": {
				"foreground": "#FF8000"
			}
		},
		
		{
			"scope": [
				"meta.property-value.css support.function"
			],
			"settings": {
				"fontStyle" : ""
			}
		},
		
		// SQL
		
		{
			"scope": [
				"keyword.other.sql",
				"keyword.other.create.sql",
				"keyword.other.DML.sql",
				"keyword.other.DML.II.sql",
				"keyword.other.postgres",
				"keyword.other.sql.postgres",
				"keyword.control.postgres"
			],
			"settings": {
				"foreground": "#FF8000"
			}
		}
		
	]
}