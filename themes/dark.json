{
	"$schema": "vscode://schemas/color-theme",
	"name": "Ultraedit Dark",
	"colors": {

		// Editor
		
		"editor.background": "#202020",
		"editor.foreground": "#DEDEDE",
		"editor.lineHighlightBackground": "#303030",
		"editorLineNumber.foreground": "#666666",
		
		// Selection
				
		"editor.selectionBackground" : "#005E8A",
		"editor.selectionHighlightBackground": "#005E8A60",
		"editor.inactiveSelectionBackground": "#005E8A60",
		
		// Find
		
		"editor.findMatchBackground" : "#005E8A",
		"editor.findMatchHighlightBackground" : "#30303000",
		"editor.findRangeHighlightBackground" : "#005E8A60",
		"editor.findMatchHighlightBorder" : "#DEDEDE80",

		// Title bar
		
		"titleBar.activeBackground": "#444444",
		"titleBar.activeForeground": "#dddddd",
		
		// Activity bar
		
		"activityBar.background" : "#303030",
		
		// Side bar
		
		"sideBar.background" : "#252525",
		"sideBar.border" : "#303030",
		
		// Status bar
		
		"statusBar.background" : "#555555",
		"statusBar.foreground" : "#cccccc",
		
		// Tabs
		
		"editorGroupHeader.tabsBackground" : "#252525",
		"tab.border" : "#333333",
		"tab.inactiveBackground" : "#252525",
		"tab.inactiveForeground" : "#888888",
		"tab.activeBackground" : "#333333",
		"tab.activeForeground" : "#ffffff",
		"tab.activeBorder" : "#444444",
		
	},
	"tokenColors": [
		
		// Comments
		
		{
			"scope": "comment",
			"settings": {
				"foreground": "#669999"
			}
		},
		
		// Strings
		
		{
			"scope": "string",
			"settings": {
				"foreground": "#aaaaaa"
			}
		},
		
		// Numbers
		
		{
			"scope": [
				"constant.numeric"
			],
			"settings": {
				"foreground": "#FF9595"
			}
		},
		
		// Builtin functions
		
		{
			"scope": [
				"support.function"
			],
			"settings": {
				"foreground": "#CB9696"
			}
		},
		
		// Variables
		
		{
			"scope": [
				"variable",
				"meta.definition.variable entity.name.function"
			],
			"settings": {
				"foreground": "#FFC891"
			}
		},
		
		// Classes
		
		{
			"scope": [
				"entity.name.type.class"
			],
			"settings": {
				"fontStyle" : "bold"
			}
		},
		
		// Functions
		
		{
			"scope": [
				"meta.function entity.name.function",
				"meta.function support.function"
			],
			"settings": {
				"fontStyle" : "bold"
			}
		},
		
		{
			"scope": [
				"meta.function-call entity.name.function",
				"meta.function-call support.function"
			],
			"settings": {
				"fontStyle" : ""
			}
		},
		
		// Global variables, constants, storage type and etc
		
		{
			"scope": [
				"variable.other.global",
				"constant",
				"support.constant",
				"storage",
				"keyword"
			],
			"settings": {
				"foreground": "#97CBFF"
			}
		},
		
		// Regexp
		
		{
			"scope": "constant.regexp",
			"settings": {
				"foreground": "#4B83CD"
			}
		},
		
		// Operators, storage modifiers
		
		{
			"scope": [
				"keyword.operator",
				"storage.modifier"
			],
			"settings": {
				"foreground": "#7ba67b"
			}
		},
		
		// PHP
		
		{
			"scope": [
				"punctuation.section.embedded.begin.php",
				"punctuation.section.embedded.end.php"
			],
			"settings": {
				"foreground": "#A16A94"
			}
		},
		
		{
			"scope": [
				"support.function.construct.php"
			],
			"settings": {
				"fontStyle" : ""
			}
		},
		
		// HTML/XML
		
		{
			"scope": [
				"punctuation.definition.tag",
				"punctuation.definition.tag.begin",
				"punctuation.definition.tag.end",
				"entity.name.tag",
				"entity.name.tag.block.any",
				"entity.name.tag.inline.any"
			],
			"settings": {
				"foreground": "#97CBFF"
			}
		},
		
		{
			"scope": [
				"entity.other.attribute-name"
			],
			"settings": {
				"foreground": "#FFAEAE"
			}
		},
		
		// CSS
		
		{
			"scope": [
				"entity.name.tag.css",
				"entity.other.attribute-name.class.css",
				"entity.other.attribute-name.id.css"
			],
			"settings": {
				"foreground": "#97CBFF"
			}
		},
		
		{
			"scope": [
				"meta.property-value.css keyword.other.unit",
				"meta.at-rule.media.header.css keyword.other.unit"
			],
			"settings": {
				"foreground": "#FFC082"
			}
		},
		
		{
			"scope": [
				"meta.property-value.css support.constant",
				"meta.property-value.css constant"
			],
			"settings": {
				"foreground": "#DEDEDE"
			}
		},
		
		{
			"scope": [
				"meta.property-value.css support.function"
			],
			"settings": {
				"fontStyle" : ""
			}
		},
		
		// SQL
		
		{
			"scope": [
				"keyword.other.sql",
				"keyword.other.create.sql",
				"keyword.other.DML.sql",
				"keyword.other.DML.II.sql",
				"keyword.other.postgres",
				"keyword.other.sql.postgres",
				"keyword.control.postgres"
			],
			"settings": {
				"foreground": "#FFC891"
			}
		}
		
	]
}